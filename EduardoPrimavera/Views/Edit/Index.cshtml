@model EduardoPrimavera.Models.Benefit

@section Scripts {
    @Scripts.Render("~/bundles/edit")
}
@{
    ViewBag.Title = "EditBenefit";
}

<h2>EditBenefit</h2>

<form class="form-horizontal" data-bind="submit: editBenefit">
    <div class="form-group">
        <label for="inputAuthor" class="col-sm-2 control-label">City</label>
        <div class="col-sm-10">
            <select data-bind="options:cities, optionsText: 'Name', value: nBenefit.City"></select>
        </div>
    </div>

    <div class="form-group">
        <label for="inputAuthor" class="col-sm-2 control-label">Category</label>
        <div class="col-sm-10">
            <select data-bind="options:categories, optionsText: 'Name', value: nBenefit.Category"></select>
        </div>
    </div>

    <div class="form-group" data-bind="with: nBenefit">
        <label for="inputTitle" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputname" data-bind="value: Name" />
        </div>

        <label for="inputDescription" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputDescription" data-bind="value: Description" />
        </div>

    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


