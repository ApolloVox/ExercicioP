@section scripts {
   *@Scripts.Render("~/bundles/login")
}

<div class="page-header">
    <h1>Login</h1>
</div>

<div class="row">
    <form class="form-horizontal" data-bind="submit: login">
        <div class="form-group" data-bind="with: loginUser">
            <label for="inputTitle" class="col-sm-2 control-label">User</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputname" data-bind="value: User" />
            </div>

            <label for="inputDescription" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputDescription" data-bind="value: Password" />
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
